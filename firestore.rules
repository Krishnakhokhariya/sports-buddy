rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update, delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
    
    // Events collection
    match /events/{eventId} {
      // Allow read for authenticated users
      allow read: if isAuthenticated();
      
      // Allow create for authenticated users
      allow create: if isAuthenticated();
      
      // Allow update for event creator or admin
      allow update: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid ||
        isAdmin()
      );
      
      // Special rule: Allow any authenticated user to update only the attendees array
      // This is needed for join/leave operations
      allow update: if isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']) &&
        request.resource.data.attendees is list;
      
      // Allow delete for event creator or admin
      allow delete: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid ||
        isAdmin()
      );
      
      // Attendees subcollection
      match /attendees/{attendeeId} {
        // Helper function to check if user is event creator
        function isEventCreator() {
          return isAuthenticated() && 
                 exists(/databases/$(database)/documents/events/$(eventId)) &&
                 get(/databases/$(database)/documents/events/$(eventId)).data.createdBy == request.auth.uid;
        }
        
        // Allow read for authenticated users
        allow read: if isAuthenticated();
        
        // Allow create for authenticated users (joining event)
        allow create: if isAuthenticated() && isOwner(attendeeId);
        
        // Allow delete for the attendee themselves (leaving event) or event creator (rejecting request)
        allow delete: if isAuthenticated() && (isOwner(attendeeId) || isEventCreator());
        
        // Allow update for:
        // 1. The attendee themselves (limited fields)
        // 2. Event creator (to update status: pending -> accepted/rejected)
        allow update: if isAuthenticated() && (
          // Attendee can update their own document (for limited fields)
          isOwner(attendeeId) ||
          // Event creator can update status and acceptedAt fields only
          (isEventCreator() && 
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'acceptedAt']) &&
           request.resource.data.status in ['pending', 'accepted', 'rejected'])
        );
      }
    }
    
    // Logs collection
    match /logs/{logId} {
      allow read: if isAuthenticated() && isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Sports collection
    match /sports/{sportId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Cities collection
    match /cities/{cityId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Areas collection
    match /areas/{areaId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() && isAdmin();
    }
    
     // Notifications collection
    match /notifications/{notificationId} {
      // Allow read for the user who owns the notification
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow create for authenticated users (for sending notifications)
      allow create: if isAuthenticated();
      
      // Allow update for the user who owns the notification (to mark as read)
      allow update: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid &&
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      
      // Allow delete for the user who owns the notification or admin
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
  }
}

