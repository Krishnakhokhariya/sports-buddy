rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update, delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
    
    // Events collection
    match /events/{eventId} {
      // Allow read for authenticated users
      allow read: if isAuthenticated();
      
      // Allow create for authenticated users
      allow create: if isAuthenticated();
      
      // Allow update for event creator or admin
      allow update: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid ||
        isAdmin()
      );
      
      // Special rule: Allow any authenticated user to update only the attendees array
      // This is needed for join/leave operations
      allow update: if isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']) &&
        request.resource.data.attendees is list;
      
      // Allow delete for event creator or admin
      allow delete: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid ||
        isAdmin()
      );
      
      // Attendees subcollection
      match /attendees/{attendeeId} {
        // Allow read for authenticated users
        allow read: if isAuthenticated();
        
        // Allow create for authenticated users (joining event)
        allow create: if isAuthenticated() && isOwner(attendeeId);
        
        // Allow delete for the attendee themselves (leaving event)
        allow delete: if isAuthenticated() && isOwner(attendeeId);
        
        // Allow update only for the attendee themselves
        allow update: if isAuthenticated() && isOwner(attendeeId);
      }
    }
    
    // Logs collection
    match /logs/{logId} {
      allow read: if isAuthenticated() && isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Sports collection
    match /sports/{sportId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Cities collection
    match /cities/{cityId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Areas collection
    match /areas/{areaId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated() && isAdmin();
    }
  }
}

